import random

def guess_the_number():
    secret_number = random.randint(1, 100)
    tries = 0
    
    while True:
        guess = int(input("Take a guess: "))
        tries += 1
        
        if guess < secret_number:
            print("Too low!")
        elif guess > secret_number:
            print("Too high!")
        else:
            print(f"Congratulations! You guessed it in {tries} tries.")
            break

guess_the_number()
